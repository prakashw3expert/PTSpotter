<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:actionBarStyle">@style/CustomDigitsTheme</item>
    </style>

    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">>
        <item name="android:fontFamily">Montserrat-Bold</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">Montserrat-Bold</item>

    </style>

    <style name="CustomDigitsTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#ac0efa</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorLink">#ac0efa</item>
        <item name="dgts__accentColor">#ac0efa</item>
    </style>

</resources>
